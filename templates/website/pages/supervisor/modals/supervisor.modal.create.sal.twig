<!-- Modal -->
<div class="modal fade" id="supervisor-create-new-sal-modal" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Create New Sal</h4>
            </div>
            <div class="modal-body">
                <form class="form-horizontal">
                    <div class="form-group">
                        <label for="role-userId" class="col-sm-3 control-label">Team Member</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" id="supervisor-employee-name" readonly>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="inputSalDate" class="col-sm-3 control-label">Date</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" id="supervisor-create-sal-date">
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-primary">Create</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
            </div>
        </div> 
    </div>
</div>