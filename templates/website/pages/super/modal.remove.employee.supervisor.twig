<!-- Modal -->
<div class="modal fade" id="employee-remove-supervisor-modal" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Remove Supervisor From Employee</h4>
            </div>
            <div class="modal-body">
                <form class="form-horizontal">
                    <div class="form-group">
                        <label for="role-userId" class="col-sm-2 control-label">Employee</label>
                        <div class="col-sm-10">
                            <input id="employee-remove-name" type="text" class="form-control" placeholder="" readonly>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="role-userId" class="col-sm-2 control-label">Supervisor</label>
                        <div class="col-sm-10">
                            <select class="selectpicker form-control" data-live-search="true" id="employee-remove-supervisor-select">
                            </select>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger" id="remove-supervisor-submit">Remove</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
            </div>
        </div> 
    </div>
</div>