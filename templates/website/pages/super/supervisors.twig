<div class="row">
	<div class="col-lg-12">
		<p>
			<button type="button" class="btn btn-primary btn-lg btn-block active" aria-expanded="true" data-toggle="collapse" href="#supervisors-container">Supervisors <span class="caret"></span></button>
		</p>
		<h1 class="page-header"></h1>
	</div>
	<div class="col-lg-12 collapse" id="supervisors-container">
		{% include 'website/pages/super/alert.delete.supervisor.twig' %}
		<div class="container-fluid">
			<div class="row">
				<div class="col-lg-12">
					<div class="well well-lg">
						<div class="col-xs-12" id="supervisors-loading" style="display:none">
							<div class="loadme-bounced">
		            			<div class="loadme-bounced-child loadme-bounced1"></div>
					            <div class="loadme-bounced-child loadme-bounced2"></div>
					            <div class="loadme-bounced-child loadme-bounced3"></div>
					        </div>
		        			<div class="loadme-mask"></div>
		        			<br>
						</div>
						<table id="supervisors-table" class="table table-striped table-bordered table-hover" cellspacing="0" width="100%">
	                        <thead>
	                            <tr>
	                                <th>SupervisorID</th>
	                                <th>User Id</th>
	                                <th>Name</th>
	                                <th>Reporting Unit</th>
	                                <th>Code</th>
	                                <th>Create Date</th>
	                                <th>Active</th>
	                            </tr>
	                        </thead>
	                    </table>
                        <div class="row" id="supervisor-options">
	                        <div class="col-lg-5" id="user-roles-button-container">
	                            <button type="button" class="btn btn-primary" onclick="SupervisorInterface.onClick('#supervisors-table',{type:'add',prep: 1, isModal:true, modalName:'#supervisor-add-modal', submit:'#supervisor-add-submit'}, '#supervisors-container')">
	                                <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Supervisor
	                            </button>
	                            <button type="button" class="btn btn-danger" onclick="SupervisorInterface.onClick('#supervisors-table',{type:'delete', isModal:false, select:true}, '#supervisors-container')">
	                                <span class="glyphicon glyphicon-trash" aria-hidden="true"></span> Delete
	                            </button>
	                        </div>
	                        {% include 'website/pages/super/modal.add.supervisor.twig' %}
	                    </div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
<div class="row">
	<div class="col-lg-12">
		<p><button type="button" class="btn btn-primary btn-lg btn-block active" data-toggle="collapse" href="#employees-container" aria-expanded="false" aria-controls="employees-container">Employees <span class="caret"></span></button></p>
		<h1 class="page-header"></h1>
	</div>
	<div class="col-lg-12 collapse" id="employees-container">
		<div class="container-fluid">
			<div class="row">
				<div class="col-lg-12">
					<div class="well well-lg">
						<div class="col-xs-12" id="employees-loading" style="display:none">
							<div class="loadme-bounced">
		            			<div class="loadme-bounced-child loadme-bounced1"></div>
					            <div class="loadme-bounced-child loadme-bounced2"></div>
					            <div class="loadme-bounced-child loadme-bounced3"></div>
					        </div>
		        			<div class="loadme-mask"></div>
		        			<br>
						</div>
						<table id="employees-table" class="table table-striped table-bordered table-hover" cellspacing="0" width="100%">
	                        <thead>
					            <tr>
					            	<th>UserID</th>
					                <th>First Name</th>
					                <th>Middle Name</th>
					                <th>Last Name</th>
					                <th>Phone Number</th>
					                <th>CellPhone</th>
					                <th>Job Title</th>
					                <th>Reporting Unit</th>
					                <th>Email</th>
					                <th>SupervisorID</th>
					                <th>Last Login Date</th>
					                <th>Active</th>
					            </tr>
					        </thead>
	                    </table>
	                    <div class="row" id="employee-options">
	                        <div class="col-lg-12">
	                            <button type="button" class="btn btn-primary" onclick="SupervisorInterface.onClick('#employees-table',{type:'add',prep: 2, modalName:'#member-assign-supervisor-modal', select:true, submit:'#supervisor-assign-submit'}, '#employees-container')">
	                                <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Assign Supervisor
	                            </button>
	                            <button type="button" class="btn btn-primary" onclick="SupervisorInterface.onClick('#employees-table',{type:'modify',prep: 1, modalName:'#team-change-member-modal', select:true}, '#employees-container')">
	                                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Change Assigned Supervisor
	                            </button>
	                            <button type="button" class="btn btn-danger" onclick="SupervisorInterface.onClick('#employees-table',{type:'delete',prep: 3,isModal:true, modalName:'#employee-remove-supervisor-modal', select:true, submit:'#remove-supervisor-submit'}, '#employees-container')">
	                                <span class="glyphicon glyphicon-trash" aria-hidden="true"></span> Remove Assigned Supervisor
	                            </button>
	                        </div>
	                        {% include 'website/pages/super/modal.assign.employee.supervisor.twig' %}
	                        {% include 'website/pages/super/modal.remove.employee.supervisor.twig' %}
	                    </div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>