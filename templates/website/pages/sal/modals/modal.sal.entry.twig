<!-- Modal -->
<div class="modal fade" id="sal-entry-modal" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Create New Sal Entry</h4>
            </div>
            <div class="modal-body">
                <form class="form-horizontal">
                    <div class="form-group">
                        <label class="col-sm-3 control-label">Status</label>
                        <div class="col-sm-9">
                            <select class="selectpicker form-control" name="status" data-live-search="true">
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label">Reporting Unit</label>
                        <div class="col-sm-9">
                            <select class="selectpicker form-control" name="reporting-unit" data-live-search="true">
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-4 control-label"><small>* Use For MHSA* </small>Sub Unit</label>
                        <div class="col-sm-8">
                            <select class="selectpicker form-control" name="sub-reporting-unit" data-live-search="true">
                            </select>
                        </div>
                    </div>
                     <div class="form-group">
                        <label class="col-sm-3 control-label">Location</label>
                        <div class="col-sm-9">
                            <select class="selectpicker form-control" name="location" data-live-search="true">
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label">Account Code</label>
                        <div class="col-sm-9">
                            <select class="selectpicker form-control" name="account-code" data-live-search="true">
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label">Project Number</label>
                        <div class="col-sm-9">
                            <select class="selectpicker form-control" name="project" data-live-search="true">
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label">Group Number</label>
                        <div class="col-sm-9">
                            <select class="selectpicker form-control" name="group" data-live-search="true">
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label">Time Spent</label>
                        <div class="col-sm-9">
                            <input type="number" class="form-control" name="time-spent" placeholder="Minutes ex. 60 (Required)">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label">Prep Time Spent</label>
                        <div class="col-sm-9">
                            <input type="number" class="form-control" name="prep-time" placeholder="Minutes ex. 60">
                        </div>
                    </div>    
                    <div class="form-group">
                        <label class="col-sm-3 control-label">Time Of Day</label>
                        <div class="col-sm-9">
                            <input type="time" class="form-control" name="time-of-day">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-3 control-label">Description/Recipient Name</label>
                        <div class="col-sm-9">
                            <textarea class="form-control" rows="2" name="description"></textarea>
                        </div>
                    </div>                               
                </form>
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-primary">Create Entry</button>
                <button name="cancel" type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
            </div>
        </div> 
    </div>
</div>