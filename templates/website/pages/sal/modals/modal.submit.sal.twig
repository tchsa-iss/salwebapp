<!-- Modal -->
<div class="modal fade" id="submit-sal-modal" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content alert-danger">
            <div class="modal-header text-center">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h2 class="modal-title">SAL User Agreement</h2>
            </div>
            <div class="modal-body alert-danger text-center">
                <p>
                	<p class="text-center">
                		<ul>
                			{# <li> #}
                				<h3>
                					I hereby certify under penalty of perjury that to the best of my knowledge and belief this claim is in all respects true, correct, and in accordance with law. I understand that payment of these claims may be from Federal and/or State funds. Any falsification or concealment of a material fact may be prosecuted under Federal and/or State laws and will subject me to discipline.
                				</h3>
                			{# </li> #}
                		</ul>
					</p>
				</p>
				<div class="well">
					<form class="form-inline">
						<div class="has-error">
							<div class="checkbox">
								<label>
									<input type="checkbox" id="user-agreement-checkbox">
											I hereby certify under penalty of perjury that I have submitted all documentation required to support this claim. By checking the box to the left I agree with the terms above and agree to signing my SAL electronically
								</label>
							</div>
						</div>
						<div class="form-group">
							
						</div>
					</form>
				</div>
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-alert">Accept</button>
                <button type="button" class="btn btn-default" data-dismiss="modal">Decline</button>
            </div>
        </div> 
    </div>
</div>