<div class="row">
    <div class="col-lg-12">
        <p><button type="button" class="btn btn-primary btn-lg btn-block active">Database Schema</button></p>
        <h1 class="page-header"></h1>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <p>
            <button type="button" onclick="AdminInterface.showServiceUnitsOnClick('#service-units')" class="btn btn-default btn-lg btn-block active">Reporting Units</button>
        </p>
        <div class="col-lg-12" id="service-units" style="display:none">
            <div class="row">
                <div class="well well-lg">
                    <table id="service-units-table" class="table table-striped table-bordered table-hover" cellspacing="0" width="100%">
                        <thead>
                            <tr>
                                <th>Reporting Unit ID</th>
                                <th>Name</th>
                                <th>Unit Abbreviation</th>
                                <th>Code</th>
                                <th>Active</th>
                                <th>Description</th>
                            </tr>
                        </thead>

                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <p>
            <button type="button" onclick="AdminInterface.showUserReportingUnitsOnClick('#user-reporting-units')" class="btn btn-default btn-lg btn-block active">User Reporting Units</button>
        </p>
        <div class="col-lg-12" id="user-reporting-units" style="display:none">
            <div class="row">
                <div class="well well-lg">
                    <table id="user-reporting-units-table" class="table table table-striped table-bordered table-hover" cellspacing="0" width="100%">
                        <thead>
                            <tr>
                                <th>First Name</th>
                                <th>Last Name</th>
                                <th>Reporting Unit</th>
                            </tr>
                        </thead>

                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <p>
            <button type="button" onclick="AdminInterface.showUserRolesOnClick('#user-roles')" class="btn btn-default btn-lg btn-block active">Roles</button>
        </p>
        <div class="col-lg-12" id="user-roles" style="display:none">
            <div class="row">
                <div class="well well-lg">
                    <table id="user-roles-table" class="table table table-striped table-bordered table-hover" cellspacing="0" width="100%">
                        <thead>
                            <tr>
                                <th>Username</th>
                                <th>First Name</th>
                                <th>Last Name</th>
                                <th>Roles</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                    </table>
                    <div class="row">
                        <div class="col-lg-12" id="user-roles-button-container">
                            <button type="button" class="btn btn-default" onclick="AdminInterface.showModal('#create-user-role-modal')">
                                <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Add Role
                            </button>
                        </div>
                    </div>
                </div>
            </div>
              <!-- Modal -->
            <div class="modal fade" id="create-user-role-modal" role="dialog">
                <div class="modal-dialog">
                
                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title">Add Role</h4>
                    </div>
                    <div class="modal-body">
                        <form class="form-horizontal">
                          <div class="form-group">
                            <label for="role-userId" class="col-sm-2 control-label">Employee</label>
                            <div class="col-sm-10">
                                <select class="form-control" id="user-form-select">
                                    <option selected="selected"></option>
                                </select>
                              {# <input type="email" class="form-control" id="role-userId" placeholder="Search for employee"> #}
                            </div>
                          </div>
                          <div class="form-group">
                            <label for="role" class="col-sm-2 control-label">Role</label>
                            <div class="col-sm-10">
                                <select class="form-control" id="user-form-roles">
                                    <option selected="selected"></option>
                                </select>
                            </div>
                          </div>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary" onclick="AdminInterface.createUserRole('#create-user-role-modal')">Save</button>
                        <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                    </div>
                </div> 
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <p>
            <button type="button" class="btn btn-default btn-lg btn-block active" onclick="AdminInterface.showProjectsOnClick('#projects-container')">Projects</button>
        </p>
        <div class="col-lg-12" id="projects-container" style="display:none">
            <div class="row">
                <p>
                    <button type="button" class="btn btn-primary btn-sm">All</button>
                    <button type="button" class="btn btn-primary btn-sm">Fiscal</button>
                </p>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <p>
            <button type="button" class="btn btn-default btn-lg btn-block active" onclick="AdminInterface.showActivityCodesOnClick('#activity-code-container')">Activity Codes</button>
        </p>
        <div class="col-lg-12" id="activity-code-container" style="display:none">
            <div class="row">
                <div class="well well-lg">
                    <div class="row">
                        <div class="col-lg-12 text-center">
                            <p align="center">
                                <div class="btn-group" id="active-code-selections" role="group" aria-label="...">
                                </div>
                            </p>
                        </div>
                        <div class="col-lg-12" id="activity-code-table-container" style="display:none">
                            <table id="account-codes-table" class="table table table-striped table-bordered table-hover" cellspacing="0" width="100%">
                                <thead>
                                    <tr>
                                        <th>Code</th>
                                        <th>Group</th>
                                        <th>Group Desc</th>
                                        <th>Billable</th>
                                        <th>Name</th>
                                        <th>Description</th>
                                        <th>Active</th>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                    </div>
                    <div class="row" id="account-codes-options" style="display:none">
                        <div class="col-lg-5" id="user-roles-button-container">
                            <button type="button" class="btn btn-primary" onclick="AdminInterface.onClick('#account-codes-table',{type:'add'}, '#activity-code-container')">
                                <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Code
                            </button>
                            <button type="button" class="btn btn-default" onclick="AdminInterface.onClick('#account-codes-table',{type:'modify'}, '#activity-code-container')">
                                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Modify
                            </button>
                            <button type="button" class="btn btn-danger" onclick="AdminInterface.onClick('#account-codes-table',{type:'delete'}, '#activity-code-container')">
                                <span class="glyphicon glyphicon-trash" aria-hidden="true"></span> Delete
                            </button>
                        </div>
                        <div class="col-lg-7" id="user-roles-button-container">
                            <button type="button" class="btn btn-primary" onclick="AdminInterface.onClick('#account-codes-table',{type:'add',isModal:true,modal:'#activity-group-add-modal'}, '#activity-code-container')">
                                <span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Group
                            </button>
                            <button type="button" class="btn btn-danger" onclick="AdminInterface.onClick('#account-codes-table',{type:'delete',isModal:true,modal:'#activity-group-delete-modal'}, '#activity-code-container')">
                                <span class="glyphicon glyphicon-trash" aria-hidden="true"></span> Delete Group
                            </button>
                            {% include 'admin/pages/modal.add.activity.group.twig' %}
                            {% include 'admin/pages/modal.delete.activity.group.twig' %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>